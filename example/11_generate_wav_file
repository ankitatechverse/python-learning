import numpy as np
import wave

# Parameters
sample_rate = 44100  # CD quality
duration = 5         # seconds
frequency = 1000     # 1kHz tone
amplitude = 32767    # Max for 16-bit audio

# Generate samples
t = np.linspace(0, duration, int(sample_rate * duration), endpoint=False)
waveform = (amplitude * np.sin(2 * np.pi * frequency * t)).astype(np.int16)

# Save to WAV file
with wave.open("loud_beep.wav", "w") as wav_file:
    wav_file.setnchannels(1)  # Mono
    wav_file.setsampwidth(2)  # 16-bit
    wav_file.setframerate(sample_rate)
    wav_file.writeframes(waveform.tobytes())

print("Sound file 'loud_beep.wav' created!")
